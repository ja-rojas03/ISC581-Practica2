<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose what to allow APP to access."
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/storage_def"
                        android:layout_width="1.5in"
                        android:layout_height="wrap_content"
                        android:text="Acess photos, media, and files on your device"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/storage"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/storage_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/storage_def"
                        app:layout_constraintTop_toBottomOf="@+id/text"
                        android:layout_margin="30dp"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/storage_def"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/location_def"
                        android:layout_width="1.5in"
                        android:layout_height="wrap_content"
                        android:text="Access this device's location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/location"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/location_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/location_def"
                        app:layout_constraintTop_toBottomOf="@+id/storage_def"
                        android:layout_margin="30dp"/>

                    <TextView
                        android:id="@+id/camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/location_def"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/camera_def"
                        android:layout_width="1.5in"
                        android:layout_height="wrap_content"
                        android:text="Take pictures and record videos"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/camera"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/camera_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/camera_def"
                        app:layout_constraintTop_toBottomOf="@+id/location_def"
                        android:layout_margin="30dp"/>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/camera_def"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/phone_def"
                        android:layout_width="1.5in"
                        android:layout_height="wrap_content"
                        android:text="Make and manage phone calls"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/phone"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/phone_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/phone_def"
                        app:layout_constraintTop_toBottomOf="@+id/camera_def"
                        android:layout_margin="30dp"/>

                    <TextView
                        android:id="@+id/contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacts"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/phone_def"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/contacts_def"
                        android:layout_width="1.5in"
                        android:layout_height="wrap_content"
                        android:text="Access your contacts"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/contacts"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/contacts_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/contacts_def"
                        app:layout_constraintTop_toBottomOf="@+id/phone_def"
                        android:layout_margin="30dp"/>
                    
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
    
    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/colorAccent"
        android:background="@color/bgColor"
        />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/continue_btn"
        android:layout_margin="20dp"
        android:textColor="@color/colorAccent"
        android:background="@color/bgColor"
        />



  </androidx.constraintlayout.widget.ConstraintLayout
   >